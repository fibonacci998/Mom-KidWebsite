
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var revenue = (Dictionary<string, int>)ViewBag.Revenue;
    var top= (Dictionary<string, int>)ViewBag.top;
}

@section header{
    Trang chủ    
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
<div class="chartContainer">
    <canvas id="myChart"></canvas>
</div>
<script>
    var collection = @Html.Raw(Json.Encode(revenue));
    var ctx = document.getElementById("myChart").getContext('2d');
    
    var xlabel=[],xvalue=[];
    for (var property in collection){
        if ( ! collection.hasOwnProperty(property)) {
            continue;
        }

        xlabel.push(property);
        xvalue.push(collection[property]);
    }

    var myChart = new Chart(ctx, {

        type: 'line',
        data: {
            labels: xlabel,
            datasets: [{
                label: 'Doanh thu',
                data: xvalue,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(0,0,0,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {

            title: {
                display: true,
                text: "Doanh thu theo ngày",
                padding: 20,
                position: 'bottom',
                fontStyle: 'bold',
                fontSize: 18

            },
            legend:{
                position: 'right'

            },
            layout: {
                padding: {
                    left: 100,
                    right: 0,
                    top: 100,
                    bottom: 0
                }
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }

                }]
            },
            elements: {
                line: {
                    tension: 0 // disables bezier curves
                }
            }
      }



});
</script>

